{
  "name": "cine-power-planner",
  "version": "1.0.2",
  "description": "Browser-based tool for planning professional camera setups powered by V-Mount or B-Mount batteries. It calculates total power consumption, current draw at 14.4\u202fV and 12\u202fV, and estimated battery runtime while checking that the battery can safely deliver the required power.",
  "main": "src/data/index.js",
  "scripts": {
    "lint": "eslint .",
    "check-consistency": "node tools/checkConsistency.js",
    "help": "node tools/cliHelp.js",
    "normalize": "node tools/normalizeData.js",
    "unify-ports": "node tools/unifyPorts.js",
    "generate-schema": "node tools/generateSchema.js && node tools/createInlineSchema.js",
    "test": "npm run lint && npm run check-consistency && npm run test:jest",
    "test:jest": "node --max-old-space-size=3072 ./node_modules/jest/bin/jest.js --runInBand",
    "test:unit": "node --max-old-space-size=1024 ./node_modules/jest/bin/jest.js --runInBand --selectProjects unit",
    "test:data": "node --max-old-space-size=1024 ./node_modules/jest/bin/jest.js --runInBand --selectProjects data",
    "test:dom": "node --max-old-space-size=1536 ./node_modules/jest/bin/jest.js --runInBand --selectProjects dom",
    "test:script": "node --max-old-space-size=3072 ./node_modules/jest/bin/jest.js --runInBand --selectProjects script"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "eslint": "^9.31.0",
    "globals": "^16.3.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "jest-localstorage-mock": "^2.4.26"
  },
  "dependencies": {
    "lottie-web": "^5.13.0",
    "lz-string": "^1.5.0"
  }
}
